. /etc/init.d/init-functions

MOUNTRESULT="OK"
if [ -f "/etc/sysctl.conf" ]; then
	prettyMsgStart "Setting kernel runtime parameters"
	sysctl -q -p|| MOUNTRESULT="FAIL"
	prettyMsgResult $MOUNTRESULT
fi



